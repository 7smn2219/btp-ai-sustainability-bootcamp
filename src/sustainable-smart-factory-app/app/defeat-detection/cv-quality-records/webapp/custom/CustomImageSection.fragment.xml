<core:FragmentDefinition xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout">
	<l:HorizontalLayout>
		<l:content>
			<l:VerticalLayout class="sapUiSmallMargin" width="320px">
				<l:content>
					<Title level="H3" titleStyle="H3" text="Original Image" class="sapUiSmallMarginTopBottom sapUiSmallMarginBegin"/>
					<Image src="{image}" width="300px" />
				</l:content>
			</l:VerticalLayout>
			<l:VerticalLayout class="sapUiSmallMargin" visible="{successInference}" width="320px">
				<l:content>
					<Title level="H3" visible="{successInference}" titleStyle="H3" text="Defect Segment" class="sapUiSmallMarginTopBottom sapUiSmallMarginBegin"/>
					<Image id="inSegment" alt="Preview not available yet due to no inference action taken." src="{segmentedImage}" width="300px" />
					<MessageStrip class="sapUiTinyMargin" width="35px" visible="{successInference}" text="Success inferenced with original image. Defected area segmented in preview above." type="Success" showIcon="true" showCloseButton="false"></MessageStrip>
				</l:content>
			</l:VerticalLayout>
		</l:content>
	</l:HorizontalLayout>

</core:FragmentDefinition>